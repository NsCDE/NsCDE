}

QErrorMessage QPushButton, QInputDialog QPushButton, QProgressDialog QPushButton,
QMessageBox QPushButton, QDialog QPushButton {
  color: NSCDE_FG_COLOR_6;
  background-color: NSCDE_BG_COLOR_6;
  border-top: 1px solid NSCDE_TS_COLOR_6;
  border-left: 1px solid NSCDE_TS_COLOR_6;
  border-bottom: 1px solid NSCDE_BS_COLOR_6;
  border-right: 1px solid NSCDE_BS_COLOR_6;
  min-width: 80px;
  min-height: 20px;
  padding-top: 2px;
  padding-bottom: 2px;
  padding-left: 4px;
  padding-right: 4px;
  icon: none;
}

QErrorMessage QPushButton::active::pressed, QInputDialog QPushButton::active::pressed,
QProgressDialog QPushButton::active::pressed, QMessageBox QPushButton::active::pressed,
QDialog QPushButton::active::pressed {
  color: NSCDE_FG_COLOR_6;
  background-color: NSCDE_SEL_COLOR_6;
  border-top: 1px solid NSCDE_BS_COLOR_6;
  border-left: 1px solid NSCDE_BS_COLOR_6;
  border-bottom: 1px solid NSCDE_TS_COLOR_6;
  border-right: 1px solid NSCDE_TS_COLOR_6;
  min-width: 80px;
  min-height: 20px;
  padding-top: 0px;
  padding-bottom: 0px;
  padding-left: 0px;
  padding-right: 0px;
}

QErrorMessage QPushButton::active, QInputDialog QPushButton::active,
QProgressDialog QPushButton::active, QMessageBox QPushButton::active,
QDialog QPushButton::active {
  color: NSCDE_FG_COLOR_6;
  background-color: NSCDE_BG_COLOR_6;
  border-top: 1px solid NSCDE_TS_COLOR_6;
  border-left: 1px solid NSCDE_TS_COLOR_6;
  border-bottom: 1px solid NSCDE_BS_COLOR_6;
  border-right: 1px solid NSCDE_BS_COLOR_6;
  min-width: 80px;
  min-height: 20px;
  padding-top: 0px;
  padding-bottom: 0px;
  padding-left: 0px;
  padding-right: 0px;
}

QTreeView {
  background-color: NSCDE_SEL_COLOR_5;
  color: NSCDE_FG_COLOR_5;
  border-top: 1px solid NSCDE_BS_COLOR_5;
  border-left: 1px solid NSCDE_BS_COLOR_5;
  border-bottom: 1px solid NSCDE_TS_COLOR_5;
  border-right: 1px solid NSCDE_TS_COLOR_5;
  margin-top: 2px;
  margin-left: 4px;
  margin-bottom: 1px;
  margin-right: 0px;
}

QMainWindow > QAbstractScrollArea > QAbstractItemView > QListView, QGraphicsView {
  background-color: NSCDE_SEL_COLOR_5;
  color: NSCDE_FG_COLOR_5;
  border-top: 1px solid NSCDE_BS_COLOR_5;
  border-left: 1px solid NSCDE_BS_COLOR_5;
  border-bottom: 1px solid NSCDE_TS_COLOR_5;
  border-right: 1px solid NSCDE_TS_COLOR_5;
  margin-top: 2px;
  margin-left: 2px;
  margin-bottom: 2px;
  margin-right: 2px;
}

QStatusBar, QSizeGrip {
  border-bottom: 1px solid NSCDE_BS_COLOR_5;
  border-right: 1px solid NSCDE_BS_COLOR_5;
  border-top: 1px solid NSCDE_TS_COLOR_5;
  border-left: 1px solid NSCDE_TS_COLOR_5;
}

QSplitter:handle:vertical {
  background-position: center center;
  background-repeat: none;
  margin: 1px 1px 1px 1px;
  height: 2px;
}

DolphinViewContainer > DolphinView > QAbstractScrollArea {
  background-color: NSCDE_SEL_COLOR_5;
  color: NSCDE_FG_COLOR_5;
  border-top: 1px solid NSCDE_BS_COLOR_5;
  border-left: 1px solid NSCDE_BS_COLOR_5;
  border-bottom: 1px solid NSCDE_TS_COLOR_5;
  border-right: 1px solid NSCDE_TS_COLOR_5;
}

