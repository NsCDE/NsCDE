   Position 26 51
   Type ItemDraw
   Font "xft:::pixelsize=14"
   Flags NoReliefString Left NoFocus
   Title {XXXXXXXXXXXXXXX}
   Main
      Case message of
      SingleClic :
      Begin
      End
End

