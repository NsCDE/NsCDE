# GTK 4
Widget 9
   Property
   Size 180 0
   Position 20 268
   Type CheckBox
   Font "xft:::pixelsize=15"
   Flags NoReliefString Left
   Value 0
   Title {XXXXXXXXXXXXXXXXXXXXXX}
   Main
      Case message of
      SingleClic :
      Begin
         If (GetValue 9) == 1 Then
         Begin
            ChangeValue 9 0
         End
      End
End

# fontmgr.local
Widget 10
   Property
   Size 200 0
   Position 20 304
   Type CheckBox
   Font "xft:::pixelsize=15"
   Flags NoReliefString Left
   Value 0
   Title {XXXXXXXXXXXXXXXXXXXXXXX}
   Main
      Case message of
      SingleClic :
      Begin
         If $FontmgrLocalExistance <> 0 Then
         Begin
            If (GetValue 10) == 1 Then
            Begin
               ChangeValue 10 0
            End
         End
      End
End

Widget 11
Property
   Size 288 0
   Position 4 352
   Type Rectangle
Main
   Case message of
      SingleClic :
         Begin
         End
End

# Ok button
Widget 12
Property
   Size 32 20
   Position 12 364
   Type PushButton
   Flags NoReliefString
   LocaleTitle {XXXXXXX}
   Font "xft:::pixelsize=15"
   Main
      Case message of
      SingleClic :
      Begin
         SendSignal 12 1
      End
      1 :
      Begin
         # Send to FontMgr integration string
         Do {SendToModule FontMgr SendString 22 2 } (GetValue 4) (GetValue 5) (GetValue 6) (GetValue 7) (GetValue 8) (GetValue 9) (GetValue 10)
         If $PerformSignal == 1 Then
         Begin
            Do {SendToModule FontMgr SendString 26 6 1}
         End
         Quit
      End
End

# Cancel button
Widget 13
Property
   Size 32 20
   Position 106 364
   Type PushButton
   Flags NoReliefString
   LocaleTitle {XXXXXXX}
   Font "xft:::pixelsize=15"
   Main
      Case message of
      SingleClic :
      Begin
         SendSignal 16 1
      End
      1 :
      Begin
         # Tell FontMgr no action has been done
         Do {SendToModule FontMgr SendString 26 6 0}
         Quit
      End
End

# Help button
Widget 14
Property
   Size 32 20
   Position 202 364
   Type PushButton
   Flags NoReliefString
   LocaleTitle {XXXXXXX}
   Font "xft:::pixelsize=15"
   Main
      Case message of
      SingleClic :
      Begin
         SendSignal 14 1
      End
      1 :
      Begin
         Do {f_DisplayURL "$[gt.Font Style Manager]" html/NsCDE-FontMgr.html}
      End
End

