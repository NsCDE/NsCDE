Widget 36
   Property
    Size 72 0
    Position 204 312
    Type PushButton
    LocaleTitle {Dismiss}
    Flags NoReliefString
    Main
       Case message of
       SingleClic :
       Begin
          SendSignal 36 1
       End
       1 :
       Begin
          Quit
       End
       2 :
       Begin
         Do {f_DisplayURL "Sysinfo" $[NSCDE_ROOT]/share/doc/html/NsCDE-SysInfo.html}
       End
End

Widget 19
   Property
   Size 32 32
   Position 300 10
