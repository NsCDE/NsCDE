UseGettext {$NSCDE_ROOT/share/locale;NsCDE-GWM}
WindowLocaleTitle {Graphical Workspace Manager Options}
WindowSize 520 580
Colorset 22

Init
Begin
   Set $FontDefault = (GetOutput {$NSCDE_ROOT/bin/getfont -v -t normal -s medium -Z 15} 1 -1)
   Set $FontHscroll = (GetOutput {$NSCDE_ROOT/bin/getfont -v -t normal -s small -Z 10} 1 -1)
   ChangeFont 1 $FontDefault
   ChangeFont 4 $FontDefault
   ChangeFont 5 $FontDefault
   ChangeFont 6 $FontDefault
   ChangeFont 7 $FontHscroll
   ChangeFont 8 $FontDefault
   ChangeFont 9 $FontHscroll
   ChangeFont 10 $FontDefault
   ChangeFont 16 $FontDefault
   ChangeFont 17 $FontDefault
   ChangeFont 18 $FontDefault
End

Widget 1
   Property
   Size 20 20
   Position 18 8
   Type ItemDraw
   Flags NoReliefString Left NoFocus
   Title { Workspaces }
   Font "xft:::pixelsize=15"
End

Widget 2
   Property
   Size 504 280
   Position 8 18
   Type Rectangle
   Flags NoReliefString
End

Widget 3
   Property
   Size 60 24
   Position 24 40
   Type CheckBox
   Flags NoReliefString Left
   Value 1
   Title { Show Workspace Backdrops}
   Font "xft:::pixelsize=14"
   Main
      Case message of
      SingleClic :
      Begin
      End
End

