# For NsCDE logout / exit SysActionDialog

Runas_Alias     TOOR = root

Cmnd_Alias NSCDE_ACPI = /opt/NsCDE/libexec/NsCDE/nscde-acpi suspend, \
                         /opt/NsCDE/libexec/NsCDE/nscde-acpi hibernate, \
                         /opt/NsCDE/libexec/NsCDE/nscde-acpi hybrid-suspend, \
                         /opt/NsCDE/libexec/NsCDE/nscde-acpi poweroff, \
                         /opt/NsCDE/libexec/NsCDE/nscde-acpi reboot

user1	ALL  = (TOOR)	NOPASSWD: NSCDE_ACPI
user2	ALL  = (TOOR)	NOPASSWD: NSCDE_ACPI
user3	ALL  = (TOOR)	NOPASSWD: NSCDE_ACPI
userN	ALL  = (TOOR)	NOPASSWD: NSCDE_ACPI

