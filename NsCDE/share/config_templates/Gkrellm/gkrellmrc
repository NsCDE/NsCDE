author = "fsadov"

# Colors for drawing data on charts.  These apply to all chart monitors
# so style settings for these are not possible. These do not apply
# if you have data_in/out images.
chart_in_color       = #00000000ffff
chart_in_color_grid  = #000000000000
chart_out_color      = #ffff00000000
chart_out_color_grid = #000000000000

# 0 (do) 1 (don't) draw top/bottom grid lines on charts.
bg_grid_mode = 0

StylePanel *.border = 0,0,2,2
StylePanel *.textcolor = #ffffffffffff #000000000000 shadow
StylePanel *.alt_textcolor = #ffffffffffff #000000000000 shadow
StylePanel *.font = normal_font
StylePanel *.alt_font = normal_font

StyleChart *.textcolor = #ffffffffffff #000000000000 shadow
StyleChart *.alt_textcolor = #ffffffffffff #000000000000 shadow
StyleChart *.font = normal_font
StyleChart *.alt_font = normal_font

StyleMeter cal.font = small_font
StyleMeter cal.alt_font = small_font
StyleMeter cal.border = 0,0,2,2
StyleMeter clock.border = 0,0,3,3
StyleMeter clock.font = normal_font
StyleMeter clock.alt_font = normal_font
StyleMeter sensors.font = small_font
StyleMeter sensors.alt_font = small_font
StyleMeter host.border = 0,0,2,2
StyleMeter host.font = large_font
StyleMeter host.alt_font = large_font

StyleMeter *.textcolor = #ffffffffffff #000000000000 shadow
StyleMeter *.alt_textcolor = #ffffffffffff #000000000000 shadow
StyleMeter *.font = normal_font
StyleMeter *.alt_font = normal_font

