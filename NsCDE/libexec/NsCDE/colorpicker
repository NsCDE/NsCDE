#!/usr/bin/env ksh93

#
# This file is a part of the NsCDE - Not so Common Desktop Environment
# Author: Hegel3DReloaded
# Licence: GPLv3
#

[ -z $NSCDE_ROOT ] && exit 2
OS_PLUS_MACHINE_ARCH=$(uname -sm | tr ' ' '_')
BIN="${NSCDE_TOOLDIR}/${OS_PLUS_MACHINE_ARCH}/colorpicker"

Existance=$(type "$BIN" 2>&1)

if [ -x "$BIN" ]; then
   exec "$BIN" "$@"
else
   echo "$Existance"
   exit 1
fi

